# WeKan container configuration
WRITABLE_PATH=/data
MONGO_URL=mongodb://wekan-db:27017/wekan
ROOT_URL=https://your-wekan.example.com

# Email settings (via socat SMTP proxy)
MAIL_FROM=your@email.com
MAIL_URL=smtp://your-smtp-login:your-smtp-password@wekan-socat-smtp:587/?tls.rejectUnauthorized=false

# Socat SMTP target (used in Docker build)
WEKAN_SOCAT_SMTP_HOST=smtp.mailprovider.com
WEKAN_SOCAT_SMTP_PORT=587

# Feature flags
WITH_API=true
RICHER_CARD_COMMENT_EDITOR=false
CARD_OPENED_WEBHOOK_ENABLED=false
BIGEVENTS_PATTERN=NONE
BROWSER_POLICY_ENABLED=true
